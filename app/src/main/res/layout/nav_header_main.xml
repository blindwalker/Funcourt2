<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingTop="55dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profileImageHolder"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/ic_profile_empty_menu" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileImage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:civ_border_color="@color/white60"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="14dp"
        android:textSize="12sp"
        android:textColor="@android:color/white"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimaryDark20"/>

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        style="@style/Widget.MyApp.HeaderBar.Spinner"
        android:dropDownSelector="@drawable/ic_spinner_triangle"
        android:id="@+id/leagueSpinner"
        android:spinnerMode="dialog" />
</LinearLayout>
